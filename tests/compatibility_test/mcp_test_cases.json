      "parameters": {
        "file_path": "examples/Sample.java",
        "start_line": -1,
        "end_line": 10
      },
      "expected_error": "InvalidParameter"
    },
    {
      "id": "MCP-E003",
      "tool": "list_files",
      "category": "search",
      "description": "存在しないディレクトリでのエラーテスト",
      "parameters": {
        "roots": ["nonexistent/directory"]
      },
      "expected_error": "DirectoryNotFound"
    }
  ],
