        "file_path": "examples/Sample.java",
        "query_key": "methods",
        "output_format": "json"
      }
    },
    {
      "id": "MCP-009",
      "tool": "query_code",
      "category": "query",
      "description": "コードクエリ - クラス検索",
      "parameters": {
        "file_path": "examples/BigService.java",
        "query_key": "class",
        "output_format": "summary"
      }
    },
    {
      "id": "MCP-010",
      "tool": "query_code",
      "category": "query",
      "description": "コードクエリ - カスタムクエリ",
      "parameters": {
        "file_path": "examples/ModernJavaScript.js",
        "query_string": "(function_declaration) @function",
        "output_format": "json"
      }
    },
    {
      "id": "MCP-011",
      "tool": "list_files",
      "category": "search",
      "description": "ファイル一覧 - 基本検索",
      "parameters": {
        "roots": ["."],
        "extensions": ["py", "java", "js"],
        "depth": 2
      }
    },
    {
      "id": "MCP-012",
      "tool": "list_files",
      "category": "search",
      "description": "ファイル一覧 - パターン検索",
      "parameters": {
        "roots": ["examples"],
        "pattern": "*.java",
        "glob": true,
        "types": ["f"]
      }
    },
    {
      "id": "MCP-013",
      "tool": "list_files",
      "category": "search",
      "description": "ファイル一覧 - サイズフィルタ",
      "parameters": {
        "roots": ["examples"],
        "extensions": ["py"],
        "size": ["+1K"],
        "limit": 10
      }
    },
    {
      "id": "MCP-014",
      "tool": "search_content",
      "category": "search",
      "description": "コンテンツ検索 - 基本検索",
      "parameters": {
        "roots": ["examples"],
        "query": "class",
        "case": "smart"
      }
    },
    {
      "id": "MCP-015",
      "tool": "search_content",
      "category": "search",
      "description": "コンテンツ検索 - 正規表現",
      "parameters": {
        "roots": ["examples"],
        "query": "def\\s+\\w+",
        "include_globs": ["*.py"],
        "context_before": 2,
        "context_after": 2
      }
    },
    {
      "id": "MCP-016",
      "tool": "search_content",
      "category": "search",
      "description": "コンテンツ検索 - カウントのみ",
      "parameters": {
        "roots": ["examples"],
        "query": "function",
        "total_only": true
      }
    },
    {
      "id": "MCP-017",
      "tool": "find_and_grep",
      "category": "search",
      "description": "ファイル検索とgrep - 基本",
      "parameters": {
        "roots": ["examples"],
        "extensions": ["java"],
        "query": "public"
      }
    },
    {
      "id": "MCP-018",
      "tool": "find_and_grep",
      "category": "search",
      "description": "ファイル検索とgrep - 複合条件",
      "parameters": {
        "roots": ["examples"],
        "pattern": "*.py",
        "glob": true,
        "query": "async def",
        "context_before": 1,
        "context_after": 1
      }
    },
    {
      "id": "MCP-019",
      "tool": "find_and_grep",
      "category": "search",
      "description": "ファイル検索とgrep - 除外パターン",
      "parameters": {
        "roots": ["."],
        "extensions": ["py"],
        "exclude": ["__pycache__", "*.pyc"],
        "query": "import",
        "depth": 3
      }
    },
    {
      "id": "MCP-020",
      "tool": "set_project_path",
      "category": "project",
      "description": "プロジェクトパス設定",
      "parameters": {
        "project_path": "."
      }
    }
  ],
  "error_test_cases": [
    {
      "id": "MCP-E001",
      "tool": "check_code_scale",
      "category": "analysis",
      "description": "存在しないファイルでのエラーテスト",
